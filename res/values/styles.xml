<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
   	
    <style name="Pad" parent="AppBaseTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.23</item>
        <item name="android:textColor">#DDFFDD</item>
        <item name="android:textSize">60sp</item>
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="MenuButton" parent="AppBaseTheme">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:textColor">#DDFFDD</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/settings</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="ResetButton" parent="AppBaseTheme">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:textColor">#DDFFDD</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/reset</item>
    </style>
</resources>
